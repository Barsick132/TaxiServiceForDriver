<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDefault">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/aboutHeader1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/program"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingEnd="0dp"
            android:paddingStart="20dp"
            android:text="@string/programInfo" />

        <TextView
            android:id="@+id/aboutHeader2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/descriptionProgram"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingEnd="0dp"
            android:paddingStart="20dp"
            android:text="@string/descriptionProgramInfo" />

        <TextView
            android:id="@+id/aboutHeader3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/organization"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingEnd="0dp"
            android:paddingStart="20dp"
            android:text="@string/organizationInfo" />

        <TextView
            android:id="@+id/aboutHeader4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/author"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingEnd="0dp"
            android:paddingStart="20dp"
            android:text="@string/authorInfo" />

        <TextView
            android:id="@+id/aboutHeader5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/version"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingEnd="0dp"
            android:paddingStart="20dp" />

        <TextView
            android:id="@+id/aboutHeader6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/yandexMaps"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingEnd="0dp"
            android:paddingStart="20dp"
            android:text="@string/yandexMapsInfo" />

        <TextView
            android:id="@+id/aboutHeader7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/termsOfUseYandexMaps"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingEnd="0dp"
            android:paddingStart="20dp" />
    </LinearLayout>
</ScrollView>