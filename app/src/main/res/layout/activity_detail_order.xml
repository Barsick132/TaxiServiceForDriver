<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDefault"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/detailOrderHeder1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/fullNameClient"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailOrderFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="20dp"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/detailOrderHeder2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/detailWhence"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailOrderWhence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="20dp"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/detailOrderHeder3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/detailWhere"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailOrderWhere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="20dp"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/detailOrderHeder4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/approximateCost"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailOrderApproxCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="20dp"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/detailOrderHeder5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/paymentMethod"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailOrderCashlessPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="20dp"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/detailOrderHeder6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/commentClient"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailOrderComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="20dp"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/detailOrderHeder7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/approximateTravelTime"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailOrderApproxTimeToDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="20dp"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/detailOrderHeder8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/approximateDistance"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailOrderApproxDistanceToDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="20dp"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/detailOrderHeder9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/timeWaiting"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailOrderWaitingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingStart="20dp"
                android:paddingTop="2dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openNavigator"
        android:text="@string/startOrder" />
</LinearLayout>